from launch import LaunchDescription
from launch_ros.actions import Node

def generate_launch_description():
    return LaunchDescription([
        Node(
            package='second',
            executable='talker',
            name='publisher',
            output='screen'
        ),
        Node(
            package='second',
            executable='listener',
            name='subscriber',
            output='screen'
        )
    ])

